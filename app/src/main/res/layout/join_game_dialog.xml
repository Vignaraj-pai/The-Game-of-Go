<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_exit_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_round"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <!-- exit the app textview -->
    <!-- Alert  Icon  ImageView -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <!-- Game ID:   Text View -->
        <TextView
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:elevation="8dp"
            android:gravity="center"
            android:text="Game ID: "
            android:textColor="@color/white" />

        <!-- random ID Text View -->
        <EditText
            android:id="@+id/game_id"
            android:inputType="number"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/popup_btn"
            android:elevation="8dp"
            android:gravity="center"
            android:hint="Enter Game ID: "
            android:textSize="20sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/join_btn"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/join_btn_bg"
            android:text="JOIN"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>
